# Neural AI Collaboration Platform - Environment Configuration

# Server Configuration
NODE_ENV=development
API_PORT=3000
WEBSOCKET_PORT=3001
UI_PORT=5176

# Database Configuration
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
REDIS_URL=redis://localhost:6379

# Advanced Memory / Vector Search (embedded, no extra containers)
ENABLE_ADVANCED_MEMORY=true
SQLITE_VEC_TABLE=shared_memory_vec
SQLITE_VEC_INDEX_TABLE=neural_vec_index
SQLITE_VEC_DIMENSIONS=384
SQLITE_VEC_MODEL=Xenova/all-MiniLM-L6-v2
# Optional: custom cache directory for transformer model files
# SQLITE_VEC_CACHE_DIR=./data/models
# Optional: disable remote model downloads (requires local model cache)
# SQLITE_VEC_ALLOW_REMOTE_MODELS=true

# Message Hub Configuration
# Default hub port is 3004 (configurable). If 3004 is busy, change it here.
MESSAGE_HUB_PORT=3004
MCP_SERVER_PORT=3001
MAX_CONNECTIONS=1000
MESSAGE_RETENTION_DAYS=7
DELIVERY_RETRIES=3
HEARTBEAT_INTERVAL=30000

# Consensus Configuration
VOTING_TIMEOUT=10000
REQUIRED_MAJORITY=0.67
TRUST_SCORE_THRESHOLD=0.7
MAX_VOTING_PARTICIPANTS=50

# ML Configuration
ML_LEARNING_RATE=0.1
ML_TRAINING_BATCH_SIZE=100
ML_MODEL_UPDATE_INTERVAL=3600000
ML_PREDICTION_THRESHOLD=0.8

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional API key for HTTP endpoints (MCP/REST). If set, clients must send
# header "x-api-key: $API_KEY" or use query "?api_key=$API_KEY".
API_KEY=IzMklkUkoJv+Thkjp+4B9DVqYYkzHCKQCBJD5dzOW0g=

# Legacy Weaviate settings (kept for backward compatibility, unused by sqlite-vec mode)
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_VECTORIZER=text2vec-huggingface

# Unified MCP server port (HTTP MCP)
NEURAL_MCP_PORT=6174

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log

# Performance Configuration
CLUSTER_WORKERS=auto
MEMORY_LIMIT=2048
CPU_CORES=auto

# Development Configuration
DEBUG=shared-memory-mcp:*
ENABLE_CORS=true
ENABLE_SWAGGER=true
HOT_RELOAD=true
