{
  "name": "shared-memory-mcp",
  "version": "1.0.0",
  "description": "Neural AI Collaboration Platform - Production Ready Distributed AI System",
  "type": "module",
  "main": "dist/unified-server/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/unified-server/index.js",
    "dev": "tsx src/unified-server/server.ts",
    "unified:start": "node dist/unified-server/index.js",
    "unified:prod": "NODE_ENV=production node dist/unified-server/index.js",
    "mcp:start": "node dist/mcp-http-server.js",
    "hub:start": "node dist/message-hub/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -f docker/Dockerfile.neural-ai -t neural-ai-platform .",
    "docker:run": "docker-compose -f docker/docker-compose.simple.yml up -d",
    "docker:stop": "docker-compose -f docker/docker-compose.simple.yml down",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully'"
  },
  "keywords": [
    "ai",
    "collaboration",
    "distributed-systems",
    "consensus",
    "machine-learning",
    "neural-networks",
    "websockets",
    "mcp",
    "agents"
  ],
  "author": "Neural AI Collaboration Platform Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "neo4j-driver": "^5.15.0",
    "weaviate-ts-client": "^1.4.0",
    "better-sqlite3": "^9.2.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "redis": "^4.6.12",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "rate-limiter-flexible": "^2.4.2",
    "events": "^3.3.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/better-sqlite3": "^7.6.8",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neural-ai/shared-memory-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/neural-ai/shared-memory-mcp/issues"
  },
  "homepage": "https://github.com/neural-ai/shared-memory-mcp#readme"
}